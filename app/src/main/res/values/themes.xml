<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.We2026_5" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primärfarben -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Sekundärfarben -->
        <item name="colorSecondary">@color/button_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Hintergrundfarben -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Akzentfarben -->
        <item name="colorTertiary">@color/accent_orange</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <!-- Fehlerfarben -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Immer heller Fensterhintergrund (Punkt 1+2: Hauptbildschirm, Neuer Kunde) -->
    <style name="Theme.We2026_5.LightBackground" parent="Theme.We2026_5">
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- AppCompat-Basis für LoginActivity (AppCompatActivity benötigt Theme.AppCompat) -->
    <style name="Theme.We2026_5.AppCompat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
    </style>
</resources>
