<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/surface_white">

    <TextView
        android:id="@+id/sheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue_dark"
        android:paddingBottom="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sheetTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/primary_blue"
        app:tabSelectedTextColor="@color/primary_blue_dark"
        app:tabTextColor="@color/text_secondary"
        app:tabIndicatorFullWidth="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:layout_marginTop="16dp">

        <!-- Tab Erledigung – semantische Farben: Abholung Blau, Auslieferung Grün, KW Orange, Rückgängig Rot -->
        <LinearLayout
            android:id="@+id/contentErledigung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSheetAbholung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sheet_abholung_erledigen"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                app:backgroundTint="@color/button_abholung"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_pickup"
                app:iconGravity="textStart"
                app:iconSize="22dp"
                app:iconPadding="10dp"
                app:iconTint="@color/white" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSheetAuslieferung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sheet_auslieferung_erledigen"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                app:backgroundTint="@color/button_auslieferung"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_delivery"
                app:iconGravity="textStart"
                app:iconSize="22dp"
                app:iconPadding="10dp"
                app:iconTint="@color/white" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSheetKw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sheet_keine_waesche"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                app:backgroundTint="@color/status_warning"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_checklist"
                app:iconGravity="textStart"
                app:iconSize="22dp"
                app:iconPadding="10dp"
                app:iconTint="@color/white" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSheetRueckgaengig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sheet_rueckgaengig"
                android:textColor="@color/button_rueckgaengig"
                app:strokeColor="@color/button_rueckgaengig"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@android:color/transparent"
                app:icon="@drawable/ic_undo"
                app:iconGravity="textStart"
                app:iconSize="22dp"
                app:iconPadding="10dp"
                app:iconTint="@color/button_rueckgaengig"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

        <!-- Tab Termin – Verschieben Orange, Urlaub Grau -->
        <LinearLayout
            android:id="@+id/contentTermin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSheetVerschieben"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sheet_termin_verschieben"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                app:backgroundTint="@color/button_verschieben"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_reschedule"
                app:iconGravity="textStart"
                app:iconSize="22dp"
                app:iconPadding="10dp"
                app:iconTint="@color/white" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSheetUrlaub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sheet_urlaub_eintragen"
                android:textColor="@color/white"
                app:backgroundTint="@color/button_urlaub"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_vacation"
                app:iconGravity="textStart"
                app:iconSize="22dp"
                app:iconPadding="10dp"
                app:iconTint="@color/white" />
        </LinearLayout>

        <!-- Tab Details – Übersicht mit klaren Labels -->
        <ScrollView
            android:id="@+id/contentDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">
                <TextView
                    android:id="@+id/labelTelefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sheet_telefon"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/sheetTelefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sheet_naechste_tour"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
                <TextView
                    android:id="@+id/sheetNaechsteTour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />
                <TextView
                    android:id="@+id/labelNotizen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sheet_notizen"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/sheetNotizen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
