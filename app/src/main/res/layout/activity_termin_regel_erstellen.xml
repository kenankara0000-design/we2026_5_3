<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header mit Zurück-Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/termin_regel_header_bg"
        android:padding="12dp"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_icon_pressed"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Zurück"
            android:padding="12dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Neue Regel erstellen"
            android:textColor="@color/termin_regel_header_text"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Regel-Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regel-Name:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etRegelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="z.B. Wöchentlich Montag, Alle 2 Wochen"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@drawable/field_background"
                android:layout_marginBottom="16dp"/>

            <!-- Beschreibung (optional) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beschreibung (optional):"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etBeschreibung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Optionale Beschreibung"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@drawable/field_background"
                android:layout_marginBottom="16dp"/>

            <!-- Wochentag-basiert Option -->
            <CheckBox
                android:id="@+id/cbWochentagBasiert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wochentag-basiert (z.B. Montag zu Montag)"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"/>

            <!-- Startdatum (für Wochentag-Berechnung) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Startdatum:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <Button
                android:id="@+id/btnStartDatum"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Startdatum wählen"
                android:background="@drawable/field_background"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>


            <!-- Abholung -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abholung:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <!-- Abholung: Datum oder Wochentag (je nach Modus) -->
            <LinearLayout
                android:id="@+id/layoutAbholungDatum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnAbholungDatum"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Abholung"
                    android:background="@drawable/field_background"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAbholungWochentag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnAbholungWochentag"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Wochentag wählen"
                    android:background="@drawable/field_background"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Auslieferung -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auslieferung:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <!-- Auslieferung: Datum oder Wochentag (je nach Modus) -->
            <LinearLayout
                android:id="@+id/layoutAuslieferungDatum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnAuslieferungDatum"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Auslieferung"
                    android:background="@drawable/field_background"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAuslieferungWochentag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnAuslieferungWochentag"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Wochentag wählen"
                    android:background="@drawable/field_background"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Wiederholen -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiederholen:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"/>

            <CheckBox
                android:id="@+id/cbWiederholen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Termin wiederholen"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"/>

            <!-- Intervall-Tage (nur wenn wiederholen aktiviert) -->
            <LinearLayout
                android:id="@+id/layoutIntervall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intervall (Tage):"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etIntervallTage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="z.B. 7 für wöchentlich, 14 für alle 2 Wochen"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/field_background"
                    android:text="7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anzahl Wiederholungen (0 = unbegrenzt):"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etIntervallAnzahl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0 = unbegrenzt"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/field_background"
                    android:text="0"/>
            </LinearLayout>

            <!-- Buttons: Speichern und Löschen (Löschen nur im Bearbeiten-Modus) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">
                
                <Button
                    android:id="@+id/btnSpeichern"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Speichern"
                    android:background="@drawable/button_speichern_glossy"
                    android:textColor="@color/white"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"/>
                
                <Button
                    android:id="@+id/btnLoeschen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Löschen"
                    android:background="@drawable/button_loeschen_glossy"
                    android:textColor="@color/white"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
