<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/surface_white">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_termin_detail"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue_dark"
        android:layout_marginBottom="16dp" />

    <!-- Kundenname mit Typ-Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Kunden-Typ Button (G/P/L) vor dem Namen -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKundenTyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_type_g"
            android:textSize="14sp"
            android:textStyle="bold"
            android:minWidth="36dp"
            android:minHeight="36dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvKundenname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_customer_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue_dark" />
    </LinearLayout>

    <!-- Adresse -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_address_label"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary" />
        <TextView
            android:id="@+id/tvAdresse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_address"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Telefon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_phone_label"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary" />
        <TextView
            android:id="@+id/tvTelefon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_phone"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Termin-Datum -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_termin"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary" />
        <TextView
            android:id="@+id/tvTerminDatum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tour_label_date"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Notizen -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_notes_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />
    <TextView
        android:id="@+id/tvNotizen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_notes"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:minHeight="48dp"
        android:padding="8dp"
        android:background="@color/surface_light"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKundeAnzeigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_show_customer"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/button_blue"
            app:cornerRadius="20dp"
            android:layout_marginEnd="8dp"
            android:minHeight="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTerminLoeschen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_delete_termin"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/button_active"
            app:cornerRadius="20dp"
            android:minHeight="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

</LinearLayout>
