<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/surface_white">

    <!-- Kundenname -->
    <TextView
        android:id="@+id/tvOverviewCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kundenname"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue_dark"
        android:layout_marginBottom="20dp" />

    <!-- Dezente Trennlinie -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <!-- Termin-Regeln (Überschrift, dezent) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Termin-Regeln"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp" />

    <!-- Regelnamen (elegant, ohne Kasten) -->
    <TextView
        android:id="@+id/tvOverviewRegelNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="20dp" />

    <!-- Button: Details öffnen -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOverviewDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details öffnen"
        app:cornerRadius="8dp" />
</LinearLayout>
