<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header mit Intervall-Nummer und LÃ¶schen-Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvIntervallNummer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Intervall 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue_dark"/>

            <ImageButton
                android:id="@+id/btnIntervallLoeschen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Intervall lÃ¶schen"
                android:tint="@color/status_overdue"/>
        </LinearLayout>

        <!-- Abholungsdatum -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦ Abholungsdatum"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPickAbholungDate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abholungsdatum wÃ¤hlen"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <!-- Auslieferungsdatum -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸšš Auslieferungsdatum"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPickAuslieferungDate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auslieferungsdatum wÃ¤hlen"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <!-- Wiederholen Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbWiederholen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiederholen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:checked="false"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(Intervall wiederholen)"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Wiederholungs-Einstellungen (nur sichtbar wenn wiederholen aktiviert) -->
        <LinearLayout
            android:id="@+id/layoutWiederholung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alle X Tage (1-365)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etIntervallTage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tage eingeben (z.B. 7 fÃ¼r wÃ¶chentlich)"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:text="7"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
