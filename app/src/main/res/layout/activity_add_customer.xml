<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header mit ZurÃ¼ck-Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#007BFF"
        android:padding="8dp"
        android:elevation="6dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#FFFFFF"
            android:contentDescription="ZurÃ¼ck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Neuen Kunden anlegen"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name (Pflichtfeld)"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse (Optional)"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etTelefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefon (Optional)"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Kunden-Art -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kunden-Art:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgKundenArt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rbGewerblich"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gewerblich"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbPrivat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privat"/>
        </RadioGroup>

        <!-- Liste-Auswahl (nur fÃ¼r Privat-Kunden) -->
        <LinearLayout
            android:id="@+id/layoutListeAuswahl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liste:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerListe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

            <Button
                android:id="@+id/btnNeueListe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Neue Liste erstellen"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etReihenfolge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reihenfolge (Standard: 1)"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/etNotizen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notizen"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <!-- Abholungsdatum -->
        <LinearLayout
            android:id="@+id/layoutAbholungDatum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¦ Abholungsdatum"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnPickAbholungDate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abholungsdatum wÃ¤hlen"
                android:minHeight="48dp"/>
        </LinearLayout>

        <!-- Auslieferungsdatum -->
        <LinearLayout
            android:id="@+id/layoutAuslieferungDatum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸšš Auslieferungsdatum"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnPickAuslieferungDate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auslieferungsdatum wÃ¤hlen"
                android:minHeight="48dp"/>
        </LinearLayout>

        <!-- Wiederholen Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbWiederholen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termine wiederholen"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(Wenn aktiviert, werden Intervall und Wochentag verwendet)"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Wiederholungs-Einstellungen (nur sichtbar wenn wiederholen aktiviert) -->
        <LinearLayout
            android:id="@+id/layoutWiederholung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <!-- Intervall -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”„"
                                android:textSize="20sp"
                                android:layout_marginEnd="6dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alle X Tage"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etIntervallTage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tage eingeben"
                            android:inputType="number"
                            android:padding="12dp"
                            android:background="@android:drawable/edit_text"/>
                    </LinearLayout>
            </LinearLayout>

            <!-- Wochentag -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wochentag:"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Mo"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/weekday_blue"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDi"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Di"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/weekday_blue"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMi"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Mi"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/weekday_blue"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Do"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/weekday_blue"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFr"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Fr"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/weekday_blue"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSa"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Sa"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/weekend_orange"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="So"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="8dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/weekend_orange"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveCustomer"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Speichern"
            android:backgroundTint="@color/primary_blue"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>