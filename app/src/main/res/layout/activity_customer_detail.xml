<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header mit ZurÃ¼ck-Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_blue"
        android:padding="8dp"
        android:elevation="6dp">

        <ImageButton
            android:id="@+id/btnDetailBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#FFFFFF"
            android:contentDescription="ZurÃ¼ck" />

        <!-- Kunden-Typ Button (G/P/L) vor dem Namen -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKundenTyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="G"
            android:textSize="14sp"
            android:textStyle="bold"
            android:minWidth="36dp"
            android:minHeight="36dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:cornerRadius="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Kundenname"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="16dp"/>

            <!-- Kundeninformationen (View Mode) -->
            <LinearLayout
                android:id="@+id/groupTextViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kunden-Art:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDetailKundenArt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gewerblich"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDetailAdresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adresse"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="#E0E0E0"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefon:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDetailTelefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telefon"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="#E0E0E0"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notizen:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDetailNotizen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notizen"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:background="#E0E0E0"
                    android:minHeight="100dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Intervalle-Anzeige (View Mode) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDetailIntervallView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/surface_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Termin-Intervalle"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_blue_dark"
                            android:layout_marginBottom="8dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvDetailIntervalleView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Kundeninformationen (Edit Mode) -->
            <LinearLayout
                android:id="@+id/groupEditTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:padding="8dp"
                    android:background="#FFFFFF"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kunden-Art:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <RadioGroup
                    android:id="@+id/rgDetailKundenArt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <RadioButton
                        android:id="@+id/rbDetailGewerblich"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gewerblich"
                        android:textColor="@color/text_primary"/>

                    <RadioButton
                        android:id="@+id/rbDetailPrivat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Privat"
                        android:textColor="@color/text_primary"/>

                    <RadioButton
                        android:id="@+id/rbDetailListe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Liste"
                        android:textColor="@color/text_primary"/>
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etDetailAdresse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Adresse"
                        android:padding="8dp"
                        android:background="#FFFFFF"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"/>

                    <Button
                        android:id="@+id/btnSelectLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="20sp"
                        android:backgroundTint="@color/primary_blue"
                        android:textColor="@color/white"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefon:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etDetailTelefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefon"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:background="#FFFFFF"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notizen:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etDetailNotizen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notizen"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:padding="8dp"
                    android:background="#FFFFFF"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:layout_marginBottom="12dp"/>

                <!-- Intervalle-Verwaltung (nur fÃ¼r Gewerblich und Liste) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDetailIntervall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/surface_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Termin-Intervalle"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_blue_dark"
                            android:layout_marginBottom="8dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvDetailIntervalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/btnDetailIntervallHinzufuegen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+ Intervall hinzufÃ¼gen"
                            android:backgroundTint="@color/primary_blue"
                            android:textColor="@color/white"
                            android:padding="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnEditCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bearbeiten"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnSaveCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Speichern"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone"
                    android:backgroundTint="@color/button_auslieferung"/>

                <Button
                    android:id="@+id/btnDeleteCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LÃ¶schen"
                    android:layout_marginStart="4dp"
                    android:visibility="gone"
                    android:backgroundTint="#DC3545"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dokumentation &amp; Fotos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Foto hinzufÃ¼gen"
                android:drawableStart="@android:drawable/ic_menu_camera"
                android:paddingStart="20dp"
                android:backgroundTint="@color/primary_blue"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPhotoThumbnails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</LinearLayout>