<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_white">

    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kunden Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue_dark"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvItemAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Musterstraße 1, 12345 Stadt"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNextTour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nächste Tour: 01.02.2026"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="italic"/>

            <ImageButton
                android:id="@+id/btnNavigation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_location_on"
                android:background="@drawable/button_icon_pressed"
                android:backgroundTint="@color/primary_blue"
                android:tint="#FFFFFF"
                android:contentDescription="Navigation"
                android:padding="12dp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/status_badge_overdue"
            android:textColor="@color/white"
            android:text="ÜBERFÄLLIG"
            android:visibility="gone"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <!-- Aktions-Buttons: A, L, V, U -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/btnAbholung"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_pickup"
                android:background="@drawable/button_icon_pressed"
                android:backgroundTint="@color/button_abholung"
                android:tint="#FFFFFF"
                android:contentDescription="Abholung"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnAuslieferung"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_delivery"
                android:background="@drawable/button_icon_pressed"
                android:backgroundTint="@color/button_auslieferung"
                android:tint="#FFFFFF"
                android:contentDescription="Auslieferung"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnVerschieben"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_reschedule"
                android:background="@drawable/button_icon_pressed"
                android:backgroundTint="@color/button_verschieben"
                android:tint="#FFFFFF"
                android:contentDescription="Verschieben"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnUrlaub"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_vacation"
                android:background="@drawable/button_icon_pressed"
                android:backgroundTint="@color/button_urlaub"
                android:tint="#FFFFFF"
                android:contentDescription="Urlaub"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRueckgaengig"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Rückgängig"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="@color/button_rueckgaengig"
                android:textColor="#FFFFFF"
                app:icon="@drawable/ic_undo"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
