<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kunden Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A237E"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvItemAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Musterstraße 1, 12345 Stadt"
            android:textColor="#757575"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="#FFCDD2"
            android:textColor="#B71C1C"
            android:text="ÜBERFÄLLIG"
            android:visibility="gone"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <!-- Aktions-Buttons: A, L, V, U -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnAbholung"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#28A745"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"/>

            <Button
                android:id="@+id/btnAuslieferung"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="L"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#FFC107"
                android:textColor="#000000"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"/>

            <Button
                android:id="@+id/btnVerschieben"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="V"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#17A2B8"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"/>

            <Button
                android:id="@+id/btnUrlaub"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="U"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#6C757D"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"/>

            <Button
                android:id="@+id/btnRueckgaengig"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Rückgängig"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="#DC3545"
                android:textColor="#FFFFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="8dp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>