<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_white">

    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Kundenname und Buttons in einer Zeile -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <!-- Kunden-Typ Button (G/P/L) vor dem Namen -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKundenTyp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/label_type_g"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:minWidth="38dp"
                android:minHeight="32dp"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp"
                app:strokeWidth="0dp"/>

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/btnAktionen"
                android:layout_toEndOf="@id/btnKundenTyp"
                android:layout_centerVertical="true"
                android:text="@string/label_customer_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue_dark"
                android:ellipsize="end"
                android:maxLines="1"/>

            <!-- Ein Button „Aktionen“ (Tourenplaner: öffnet Bottom Sheet) – hervorgehoben -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAktionen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/sheet_aktionen"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:visibility="gone"
                android:contentDescription="@string/sheet_aktionen_desc"
                app:cornerRadius="10dp"
                app:backgroundTint="@color/primary_blue"
                app:icon="@drawable/ic_checklist"
                app:iconGravity="textStart"
                app:iconSize="18dp"
                app:iconPadding="6dp"
                app:iconTint="@color/white"/>

            <!-- Buttons Ü → A L KW A L V U (Legacy: ausgeblendet wenn btnAktionen sichtbar) -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Ü-Button (Überfällig) - nur sichtbar wenn überfällig -->
                <TextView
                    android:id="@+id/btnUeberfaellig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ü"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    android:background="@drawable/button_ue_glossy"
                    android:textColor="#FFFFFF"
                    android:contentDescription="@string/content_desc_overdue"
                    android:visibility="gone" />

                <!-- Pfeil zwischen Ü und nächstem Button -->
                <ImageView
                    android:id="@+id/arrowUeberfaellig"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/arrow_right"
                    android:contentDescription="@string/content_desc_arrow"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btnKw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KW"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="48dp"
                    android:minHeight="52dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_kw_glossy"
                    android:textColor="#FFFFFF"
                    android:contentDescription="@string/content_desc_no_laundry"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btnAbholung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_a_glossy"
                    android:textColor="#FFFFFF"
                    android:contentDescription="@string/content_desc_abholung" />

                <TextView
                    android:id="@+id/btnAuslieferung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_l_glossy"
                    android:textColor="#FFFFFF"
                    android:contentDescription="@string/content_desc_auslieferung" />

                <TextView
                    android:id="@+id/btnVerschieben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_v_glossy"
                    android:textColor="#FFFFFF"
                    android:contentDescription="@string/content_desc_verschieben" />

                <TextView
                    android:id="@+id/btnUrlaub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_u_glossy"
                    android:textColor="#FFFFFF"
                    android:contentDescription="@string/content_desc_urlaub" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvItemAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Musterstraße 1, 12345 Stadt"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Status-Badge (Tourenplaner: z. B. „A+L heute“, „Überfällig“) -->
        <TextView
            android:id="@+id/tvStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/status_badge_done"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvItemTelefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvItemNotizen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNextTour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nächste Tour: 01.02.2026"
                android:textColor="@color/text_primary"
                android:textSize="13sp"/>

            <ImageButton
                android:id="@+id/btnNavigation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location_on"
                android:background="@drawable/button_icon_pressed"
                android:backgroundTint="@color/primary_blue"
                android:tint="#FFFFFF"
                android:contentDescription="@string/content_desc_navigation"
                android:padding="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Legacy: Status/Überfällig/Rückgängig – dauerhaft ausgeblendet (nur Sheet + Status-Badge) -->
        <LinearLayout
            android:id="@+id/statusBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/tvStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_overdue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:background="@drawable/button_ue_glossy"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:contentDescription="@string/content_desc_overdue" />

            <!-- Überfällig A-Button (nur Anzeige, keine Funktion) -->
            <TextView
                android:id="@+id/btnUeberfaelligA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:gravity="center"
                android:background="@drawable/button_a_glossy"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:contentDescription="@string/content_desc_overdue_a" />

            <!-- Überfällig L-Button (nur Anzeige, keine Funktion) -->
            <TextView
                android:id="@+id/btnUeberfaelligL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="L"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:gravity="center"
                android:background="@drawable/button_l_glossy"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:contentDescription="@string/content_desc_overdue_l" />

            <!-- Datum als Button (orange) -->
            <TextView
                android:id="@+id/tvUeberfaelligDatum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.01.2026"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:background="@drawable/button_datum_glossy"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:contentDescription="@string/content_desc_overdue_date" />

            <!-- Erledigungs-Hinweise (Abholung/Auslieferung: datum zeitstempel) -->
            <TextView
                android:id="@+id/tvErledigungsHinweise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/status_badge_done"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="italic"
                android:visibility="gone"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- Zeile mit Überfällig: datum und Rückgängig-Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvUeberfaelligIndikator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/status_badge_overdue"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="@string/label_overdue_colon"
                android:visibility="gone"
                android:gravity="center_vertical"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRueckgaengig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/sheet_rueckgaengig"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="@color/button_rueckgaengig"
                android:textColor="#FFFFFF"
                app:icon="@drawable/ic_undo"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
