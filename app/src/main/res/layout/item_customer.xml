<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_white">

    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Kundenname und Buttons in einer Zeile -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Kunden Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue_dark"/>

            <!-- Buttons A L V U rechts ausgerichtet -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/btnAbholung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_alvu_border"
                    android:textColor="@color/text_secondary"
                    android:contentDescription="Abholung" />

                <TextView
                    android:id="@+id/btnAuslieferung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_alvu_border"
                    android:textColor="@color/text_secondary"
                    android:contentDescription="Auslieferung" />

                <TextView
                    android:id="@+id/btnVerschieben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_alvu_border"
                    android:textColor="@color/text_secondary"
                    android:contentDescription="Verschieben" />

                <TextView
                    android:id="@+id/btnUrlaub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="U"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minWidth="52dp"
                    android:minHeight="52dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/button_alvu_border"
                    android:textColor="@color/text_secondary"
                    android:contentDescription="Urlaub" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvItemAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Musterstraße 1, 12345 Stadt"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNextTour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nächste Tour: 01.02.2026"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="italic"/>

            <ImageButton
                android:id="@+id/btnNavigation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location_on"
                android:background="@drawable/button_icon_pressed"
                android:backgroundTint="@color/primary_blue"
                android:tint="#FFFFFF"
                android:contentDescription="Navigation"
                android:padding="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/status_badge_overdue"
            android:textColor="@color/white"
            android:text="ÜBERFÄLLIG"
            android:visibility="gone"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <!-- Rückgängig-Button (nur bei erledigten Kunden) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRueckgaengig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="Rückgängig"
            android:textSize="12sp"
            android:textStyle="bold"
            android:backgroundTint="@color/button_rueckgaengig"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_undo"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:cornerRadius="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
