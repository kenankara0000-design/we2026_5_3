<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/background_light">

    <!-- Offline-Status und Sync-Status (oben) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        
        <!-- Offline-Status -->
        <LinearLayout
            android:id="@+id/tvOfflineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/status_badge_overdue"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginEnd="8dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_offline"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_offline"
                android:textColor="#FFEB3B"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>
        
        <!-- Sync-Status -->
        <LinearLayout
            android:id="@+id/tvSyncStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/status_badge_overdue"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_offline"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_sync_status"
                android:textColor="#2196F3"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvOfflineSyncHinweis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/offline_sync_hinweis"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue_dark"
        android:layout_marginBottom="32dp"
        android:letterSpacing="0.02"/>

    <!-- Haupt-Buttons: Kunden, Touren, Neu Kunde â€“ visuell hervorgehoben -->
    <Button
        android:id="@+id/btnNeuKunde"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="@string/main_btn_neu_kunde"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary_blue_dark"
        android:textColor="@color/white"
        android:contentDescription="@string/main_btn_neu_kunde_desc"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnKunden"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="@string/main_btn_kunden"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        android:contentDescription="@string/main_btn_kunden_desc"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnTouren"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="@string/main_btn_touren"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        android:contentDescription="@string/main_btn_touren_desc"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_weitere"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnKundenListen"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/main_btn_listen"
        android:textSize="14sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_blue_light"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/main_btn_listen_desc"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnStatistiken"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/main_btn_statistiken"
        android:textSize="14sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_blue_light"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/main_btn_statistiken_desc"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnTerminRegeln"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/main_btn_termin_regeln"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/status_warning"
        android:textColor="@color/white"
        android:contentDescription="@string/main_btn_termin_regeln_desc"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

</LinearLayout>
