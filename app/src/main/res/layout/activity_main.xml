<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/background_light">

    <!-- Offline-Status und Sync-Status (oben) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        
        <!-- Offline-Status -->
        <LinearLayout
            android:id="@+id/tvOfflineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/status_badge_overdue"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginEnd="8dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_offline"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline"
                android:textColor="#FFEB3B"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>
        
        <!-- Sync-Status -->
        <LinearLayout
            android:id="@+id/tvSyncStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/status_badge_overdue"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_offline"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synchronisiere..."
                android:textColor="#2196F3"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TourPlaner 2026"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue_dark"
        android:layout_marginBottom="56dp"
        android:letterSpacing="0.02"/>

    <Button
        android:id="@+id/btnNeuKunde"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="+ Neu Kunde"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnKunden"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Kunden"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnTouren"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Touren Planer"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnKundenListen"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="ðŸ“‹ Kunden Listen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_blue_light"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnStatistiken"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="ðŸ“Š Statistiken"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_blue_light"
        android:textColor="@color/white"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

    <Button
        android:id="@+id/btnTerminRegeln"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="ðŸ“‹ Termin-Regeln"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/status_warning"
        android:textColor="@color/white"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

</LinearLayout>
