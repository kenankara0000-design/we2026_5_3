        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.We2026_5"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.We2026_5.LightBackground" />

        <activity
            android:name=".AddCustomerActivity"
            android:exported="false"
            android:theme="@style/Theme.We2026_5.LightBackground" />

        <activity
            android:name=".CustomerManagerActivity"
            android:exported="false" />

        <activity
            android:name=".TourPlannerActivity"
            android:exported="false" />

        <activity
            android:name=".CustomerDetailActivity"
            android:exported="false" />

        <activity
            android:name=".StatisticsActivity"
            android:exported="false" />

        <activity
            android:name=".MapViewActivity"
            android:exported="false" />

        <activity
            android:name=".ListeErstellenActivity"
            android:exported="false" />

        <activity
            android:name=".KundenListenActivity"
            android:exported="false" />

        <activity
            android:name=".ListeBearbeitenActivity"
            android:exported="false" />

        <activity
            android:name=".TerminRegelManagerActivity"
            android:exported="false" />

        <activity
            android:name=".TerminRegelErstellenActivity"
            android:exported="false" />

        <activity
            android:name=".ui.urlaub.UrlaubActivity"
            android:exported="false"
            android:theme="@style/Theme.We2026_5.LightBackground" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.we2026_5.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>